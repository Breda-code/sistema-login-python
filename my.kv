<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        FloatLayout:
            size: root.width, root.height / 2

            Label:
                text: "Criar uma conta"
                size_hint: 0.8, 0.2
                pos_hint: {"x": 0.1, "top": 1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: "Nome:"
                size_hint: 0.5, 0.12
                pos_hint: {"x": 0, "top": 0.8}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: namee
                pos_hint: {"x": 0.5, "top": 0.8}
                size_hint: 0.4, 0.12
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: "E-mail:"
                size_hint: 0.5, 0.12
                pos_hint: {"x": 0, "top": 0.67}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: email
                pos_hint: {"x": 0.5, "top": 0.67}
                size_hint: 0.4, 0.12
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: "Senha:"
                size_hint: 0.5, 0.12
                pos_hint: {"x": 0, "top": 0.54}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: passw
                pos_hint: {"x": 0.5, "top": 0.54}
                size_hint: 0.4, 0.12
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Button:
                text: "Já tem uma conta? Entrar"
                pos_hint: {"x": 0.3, "y": 0.25}
                size_hint: 0.4, 0.1
                font_size: (root.width**2 + root.height**2) / 17**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.login()

            Button:
                text: "Criar"
                pos_hint: {"x": 0.2, "y": 0.05}
                size_hint: 0.6, 0.15
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:
        Label:
            text: "E-mail:"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.1, "top": 0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top": 0.9}
            size_hint: 0.4, 0.15

        Label:
            text: "Senha:"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.1, "top": 0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top": 0.7}
            size_hint: 0.4, 0.15

        Button:
            text: "Entrar"
            pos_hint: {"x": 0.2, "y": 0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            text: "Não tem uma conta? Bora criar!"
            pos_hint: {"x": 0.3, "y": 0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:
    n: n
    email: email
    created: created

    FloatLayout:
        Label:
            id: n
            text: "Account Name:"
            pos_hint: {"x": 0.1, "top": 0.9}
            size_hint: 0.8, 0.2

        Label:
            id: email
            text: "Email:"
            pos_hint: {"x": 0.1, "top": 0.7}
            size_hint: 0.8, 0.2

        Label:
            id: created
            text: "Created:"
            pos_hint: {"x": 0.1, "top": 0.5}
            size_hint: 0.8, 0.2

        Button:
            text: "Sair"
            pos_hint: {"x": 0.2, "y": 0.1}
            size_hint: 0.6, 0.2
            on_release:
                root.manager.transition.direction = "down"
                app.root.current = "login"
